@model Dinamico.Models.ContentPart

@{ 
   
    Content.Define(ie =>
    {
        ie.Title = "Image";
        ie.IconUrl = "{IconsUrl}/photo.png";
        ie.Image("Image");
        ie.Enum("Float", typeof(N2.Web.BlockAlignment)).DefaultValue(N2.Web.BlockAlignment.Middle);
        ie.FreeText("Caption");
        ie.Text("AltText").DefaultValue("");
    });

    var image = "(null)";
    var Float = N2.Web.BlockAlignment.None;
    var caption = "(null)";
    var altText = "(null)";
    
    image   = Model.GetDetail<string>("Image", "");   
    caption = Model.GetDetail<string>("Caption", ""); 
    altText = Model.GetDetail<string>("AltText", ""); 
    
    try {
        Float = (N2.Web.BlockAlignment) Enum.Parse(typeof(N2.Web.BlockAlignment), (Model.GetDetail("Float") ?? N2.Web.BlockAlignment.Middle).ToString());
    }
    catch {
        Float = N2.Web.BlockAlignment.Middle;   
    }

    bool HasImage = !String.IsNullOrWhiteSpace(image);
    bool HasCaption = !String.IsNullOrWhiteSpace(caption);
}

@switch (Float)
{
	case N2.Web.BlockAlignment.Left:
		<div class="img-block img-block-left" style="float: left;">
			<img src="@image" alt="@altText" />
			@if (HasCaption) { <p>@caption</p> }
		</div>
		break;
        
	case N2.Web.BlockAlignment.Right:
		<div class="img-block img-block-right" style="float: right;">
			<img src="@image" alt="@altText" />
			@if (HasCaption) { <p>@caption</p> }
		</div>
		break;
        
	case N2.Web.BlockAlignment.Middle:
		<div class="img-block img-block-middle" style="text-align: center;">
			<p><img src="@image" alt="@altText" /></p>
			@if (HasCaption) { <p>@caption</p> }
		</div>
		break;
        
	default:
        <div class="img-block img-block-default">
		    <p><img src="@image" alt="@altText" /></p>
		    @if (HasCaption) { <p>@caption</p> }
        </div>
		break;
        
}